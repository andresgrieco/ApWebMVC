@model IEnumerable<EntidadDeNegocio.Financiador>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Financiadores</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreOrg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Monto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreOrg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Monto)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Fin_id }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Fin_id }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.Fin_id })
        </td>
    </tr>
}

</table>
